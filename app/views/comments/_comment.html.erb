<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name" style="color: white;"><strong><%= comment.name %></strong></p>
		<p class="comment_body" style="color: white;"><%= comment.body %></p>
		<p class="comment_time" style="color: white;"><%= time_ago_in_words(comment.created_at) %> Ago</p>
	</div>
	
	<p>
		<% unless !user_signed_in? %>
	<%= link_to "Delete", post_comment_path(comment.post, comment),
				method: :delete,
				class: 'button',
				data: { confirm: "Are you sure?" }%>
		<% end %>
	</p>

</div>